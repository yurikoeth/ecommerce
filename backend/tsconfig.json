{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true, // Enables all strict type-checking options
    "strictNullChecks": true, // Ensures null/undefined are explicitly handled
    "noImplicitAny": true, // Disallows implicit `any` type
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in imports
    "noFallthroughCasesInSwitch": true, // Prevents unintended fallthrough in switch
    "esModuleInterop": true, // For seamless interop with ES6 modules
    "moduleResolution": "node" // Node-style module resolution
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
